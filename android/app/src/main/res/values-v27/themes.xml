<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Fixes Navigation Color for API 27+ for correct navbar buttons colors with white navbar color -->

    <style name="Theme.ReluctTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Status bar & Nav bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/backgroundLightColor</item>
        <item name="android:background">@color/backgroundLightColor</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/surfaceLightColor</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
</resources>