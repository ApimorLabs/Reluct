<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposeAndroidTemplate</item>

        <item name="android:windowLightStatusBar">true</item>

        <!-- API 31+ specific attributes -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_icon</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/branding_image_layer_list</item>
    </style>
</resources>